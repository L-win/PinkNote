<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--        <item name="android:textColorPrimary">@color/textColorPrimary</item>-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="noteItemTextColor">#000000</item>
        <item name="noteItenBackgroundColor">#FFFFFF</item>
        <item name="backgroundColor">#ffe4ec</item>
        <item name="noteItenBackgroundDrawable">@drawable/edit_text_background</item>
    </style>

    <style name="darktheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="noteItemTextColor">#FFFF</item>
        <item name="noteItenBackgroundColor">#515151</item>
        <item name="backgroundColor">#272727</item>
        <item name="noteItenBackgroundDrawable">@drawable/edit_text_background_dark</item>
    </style>

    <style name="PreferenceScreen" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColor">#000000</item>
        <item name="android:textColorPrimary">#FF0000</item>
        <item name="android:textColorSecondary">#515151</item>

        <item name="backgroundColor">#ffe4ec</item>
        <!--        <item name="android:background">#ffe4ec</item>-->
    </style>
    <style name="PreferenceScreenDark" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColor">#ffffff</item>
        <item name="android:textColorPrimary">#ffffff</item>
        <item name="android:textColorSecondary">#8A8A8A</item>

        <item name="backgroundColor">#272727</item>
<!--        <item name="android:background">#272727</item>-->
    </style>

</resources>