<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="?attr/appBackgroundColor"
    android:orientation="vertical"
    tools:context="com.elvina.pinknote.AddEditNoteActivity">

    <EditText
        android:id="@+id/edit_text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="?attr/noteItenBackgroundDrawable"
        android:hint="@string/note_hint_title"
        android:inputType="textMultiLine"
        android:padding="30sp"
        android:textColor="?attr/noteItemTextColor"
        android:textColorHint="?attr/noteItemTextColor" />

    <EditText
        android:id="@+id/edit_text_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="?attr/noteItenBackgroundDrawable"
        android:gravity="top"
        android:hint="@string/note_hint_description"
        android:inputType="textMultiLine"
        android:maxHeight="400dp"
        android:minHeight="150dp"
        android:padding="15dp"
        android:textColor="?attr/noteItemTextColor"
        android:textColorHint="?attr/noteItemTextColor" />


    <Switch
        android:id="@+id/switch1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="?attr/noteItenBackgroundDrawable"
        android:padding="10dp"
        android:text="Pin"
        android:textColor="?attr/noteItemTextColor"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="?attr/noteItenBackgroundDrawable"
        android:padding="4dp"
        android:textColor="?attr/noteItemTextColor">

        <TextView
            android:id="@+id/text_view_date_added"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:textColor="?attr/noteItemTextColor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:padding="10dp"
            android:text="@string/note_hint_date"
            android:textColor="?attr/noteItemTextColor" />

    </RelativeLayout>


</LinearLayout>